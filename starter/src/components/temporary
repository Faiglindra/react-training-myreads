import { Link } from "react-router-dom";
import { useEffect, useState } from "react";
import BooksGrid from "./BooksGrid";
import * as BooksApi from "./../BooksAPI";

const SearchPage = ({ booksInShelf, changeShelf }) => {
  const [books, setBooks] = useState([]);
  const [query, setQuery] = useState("");

  const getShelf = (id) => {
    const searchedBook = booksInShelf.find((book) => book.id === id);
    if (searchedBook) {
      return searchedBook.shelf;
    }
    return "none";
  };

  useEffect(() => {
    const search = async () => {
      if (query.length <= 0) {
        setBooks([]);
        return;
      }

      const result = await BooksApi.search(query, 10);
      console.log("useEffect after: " + query);
      if (result.error) {
        console.log("Error in search:" + result.error);
        setBooks([]);
      } else {
        setBooks(
          result.map((book) => ({
            ...book,
            shelf: getShelf(book.id),
          }))
        );
      }
    };

    console.log("useEffect before: " + query);
    search();
  }, [query]);

  const searchBook = (query) => {
    setQuery(query);
  };

  return (
    <div className="search-books">
      <div className="search-books-bar">
        <Link className="close-search" to="/">
          Close
        </Link>
        <div className="search-books-input-wrapper">
          <input
            type="text"
            placeholder="Search by title, author, or ISBN"
            onChange={(event) => searchBook(event.target.value)}
          />
        </div>
      </div>
      <div className="search-books-results">
        <BooksGrid books={books} changeShelf={changeShelf} />
      </div>
    </div>
  );
};

export default SearchPage;
